{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "recipe",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "ingredients":{
      "type": "string",
      "minLength": 1
    },
    "time":{
      "type": "string",
      "minLength": 1
    },
    "portions":{
      "type": "number"
    }
  },
  "required": [
    "name",
    "ingredients"
  ],
  "additionalProperties": false
}